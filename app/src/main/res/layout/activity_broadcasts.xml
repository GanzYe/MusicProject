<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button android:id="@+id/button_intent_with_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send with class"
        android:layout_marginVertical="10dp"/>

    <Button android:id="@+id/button_intent_with_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send with action"
        android:layout_marginVertical="10dp"/>

    <Button android:id="@+id/button_local_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local intent"
        android:layout_marginVertical="10dp"/>

    <Button android:id="@+id/button_local_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local action"
        android:layout_marginVertical="10dp"/>

</LinearLayout>